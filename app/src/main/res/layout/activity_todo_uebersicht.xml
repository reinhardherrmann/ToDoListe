<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.orome.todoliste.Activity_TodoUebersicht">

    <ListView
        android:id="@+id/list_ToDo"
        android:layout_width="368dp"
        android:layout_height="325dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="458dp" />

    <Button
        android:id="@+id/btn_delete_all"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="clear all "
        app:layout_constraintEnd_toStartOf="@+id/btn_delete_first"
        tools:layout_editor_absoluteY="458dp" />

    <Button
        android:id="@+id/btn_delete_first"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:text="clear first"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="458dp" />

    <Button
        android:id="@+id/btn_update_first"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:text="update first"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="458dp" />
</android.support.constraint.ConstraintLayout>
